{
  "name": "Modite Directory",
  "version": "1.0",
  "description": "See where Modites across the world are",
  "manifest_version": 2,
  "incognito": "split",
  "permissions": [
     "activeTab"
   ],
  "icons": {
    "16": "logo16.png",
    "32": "logo32.png",
    "48": "logo48.png",
    "128": "logo128.png",
    "256": "logo256.png"
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Click to show the Modite Map",
    "default_icon": {
      "16": "logo16.png",
      "32": "logo32.png",
      "48": "logo48.png",
      "128": "logo128.png"
    }
  }
}
