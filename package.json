{
  "name": "modir",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "start": "react-app-rewired start",
    "build": "react-app-rewired build",
    "test": "react-app-rewired test",
    "eject": "react-scripts eject",
    "autoformat": "lint-staged"
  },
  "dependencies": {
    "@amcharts/amcharts4": "^4.2.6",
    "@amcharts/amcharts4-geodata": "^4.1.4",
    "@ionic/react": "0.0.5",
    "classnames": "^2.2.6",
    "lazysizes": "4.1.7",
    "react": "^16.8.4",
    "react-dom": "^16.8.4",
    "react-router": "^5.0.0",
    "react-router-dom": "^5.0.0",
    "react-scripts": "2.1.8"
  },
  "devDependencies": {
    "@types/classnames": "^2.2.7",
    "@types/gapi.auth2": "0.0.50",
    "@types/react": "^16.8.8",
    "@types/react-dom": "^16.8.3",
    "@types/react-router": "^4.4.5",
    "@types/react-router-dom": "^4.3.1",
    "hard-source-webpack-plugin": "^0.13.1",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "node": "^11.12.0",
    "prettier": "^1.16.4",
    "react-app-rewired": "^2.1.1",
    "typescript": "^3.3.4000",
    "worker-loader": "^2.0.0"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run autoformat"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "git add"
    ],
    "src/**/*.{json,scss,sass,css,less}": [
      "prettier --write",
      "git add"
    ]
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "bundlesize": [
    {
      "path": "./build/precache-*.js",
      "maxSize": "50 kB"
    },
    {
      "path": "./build/*.worker.js",
      "maxSize": "10 kB"
    },
    {
      "path": "./build/static/js/*.chunk.js",
      "maxSize": "300 kB"
    },
    {
      "path": "./build/static/js/*.chunk.js",
      "maxSize": "250 kB"
    },
    {
      "path": "./build/static/js/runtime*.js",
      "maxSize": "30 kB"
    }
  ]
}
