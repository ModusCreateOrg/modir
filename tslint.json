{
    "rules": {
        "no-duplicate-variable": {
            "severity": "warning"
        },
        "quotemark": [
            true,
            "single"
        ],
        "semicolon": [
            true
        ],
        "trailing-comma": [
            true,
            {
                "multiline": "always",
                "singleline": "never",
                "esSpecCompliant": true
            }
        ]
    },
    "rulesDirectory": [
        "node_modules/tslint-eslint-rules/dist/rules"
    ]
}