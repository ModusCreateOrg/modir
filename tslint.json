{
  "extends": [
    "tslint:latest",
    "tslint-react",
    "tslint-react-hooks",
    "tslint-config-prettier"
  ],
  "rules": {
    "jsx-boolean-value": [
      true,
      "never"
    ],
    "jsx-no-lambda": false,
    "no-duplicate-variable": {
      "severity": "warning"
    },
    "no-submodule-imports": false,
    "prettier": true,
    "quotemark": [
      true,
      "single",
      "jsx-double"
    ],
    "semicolon": [
      true
    ],
    "trailing-comma": [
      true,
      {
        "multiline": "always",
        "singleline": "never",
        "esSpecCompliant": true
      }
    ]
  },
  "rulesDirectory": [
    "tslint-plugin-prettier"
  ]
}
